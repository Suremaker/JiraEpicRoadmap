<div class="button" @onclick="@(()=>OnClick.InvokeAsync(null))" style="visibility: @(Collapsed?"collapsed":"visible"); display: @(Collapsed?"none":"inline-block")">@Text</div>

@code {
    [Parameter]
    public string Text { get; set; }
    [Parameter]
    public EventCallback OnClick { get; set; }
    [Parameter]
    public bool Collapsed { get; set; }
}
