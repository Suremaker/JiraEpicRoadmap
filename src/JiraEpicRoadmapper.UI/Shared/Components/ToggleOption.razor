<div class="toggle-option" @onclick="@(() => OnClick.InvokeAsync(!Checked))" style="visibility: @(Collapsed ? "collapsed" : "visible"); display: @(Collapsed ? "none" : "block")">
    @(Checked ? CheckedSymbol : UncheckedSymbol) @Text
</div>

@code {

    [Parameter]
    public string CheckedSymbol { get; set; } = "✔️";
    [Parameter]
    public string UncheckedSymbol { get; set; } = "❌";
    [Parameter]
    public string Text { get; set; }
    [Parameter]
    public EventCallback<bool> OnClick { get; set; }
    [Parameter]
    public bool Checked { get; set; }
    [Parameter]
    public bool Collapsed { get; set; }
}